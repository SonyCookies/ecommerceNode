<%- include('partials/head') %>
<%- include('partials/navbar') %>

<!-- Hero Section -->
<div class="bg-blue-500 text-white py-20 text-center">
  <h1 class="text-4xl font-bold">Welcome to Our E-Commerce Store</h1>
  <p class="mt-4">Shop the latest products and exclusive deals</p>
  <a href="/products" class="mt-6 inline-block bg-white text-blue-500 py-2 px-4 rounded-full font-semibold">Shop Now</a>
</div>

<!-- Featured Categories -->
<div class="max-w-7xl mx-auto px-4 py-10">
  <h2 class="text-2xl font-bold text-center mb-6">Featured Categories</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% categories.forEach(category => { %>
      <a href="/products?categoryId=<%= category.id %>" class="bg-white shadow rounded-lg p-4 transition-transform transform hover:scale-105" style="display: block; text-decoration: none;">
        <h3 class="font-bold text-lg"><%= category.name %></h3>
        <p class="text-gray-600">Description about <%= category.name %></p>
      </a>
    <% }); %>
  </div>
</div>


<div class="max-w-7xl mx-auto px-4 py-10">
  <h2 class="text-2xl font-bold text-center mb-6">Featured Products</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% products.forEach(product => { %>
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <img src="<%= product.imageUrl || 'https://via.placeholder.com/300' %>" alt="Product Image" class="w-full h-48 object-cover">
        <div class="p-4">
          <h3 class="font-bold text-lg"><%= product.name %></h3>
          <p class="text-gray-600">$<%= product.price.toFixed(2) %></p>
          <a href="/products/<%= product.id %>" class="mt-4 inline-block bg-blue-500 text-white py-2 px-4 rounded">View Details</a>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('partials/footer') %>
