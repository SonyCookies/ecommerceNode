<!-- app/views/partials/productGrid.ejs -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% products.forEach(product => { %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <img src="https://via.placeholder.com/300" alt="<%= product.name %>" class="w-full h-48 object-cover">
          <div class="p-4">
              <h2 class="font-semibold text-lg"><%= product.name %></h2>
              <p class="text-gray-600 mt-1">$<%= product.price.toFixed(2) %></p>
              <p class="text-gray-500 mt-2"><%= product.description %></p>
              <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Add to Cart</button>
          </div>
      </div>
  <% }); %>
</div>
